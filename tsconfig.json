{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 18",

	"compilerOptions": {
		"lib": ["ES2021"],
		"module": "commonjs",
		"target": "es2022",
		"outDir": "build",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}